<odoo>
    <!-- Homepage -->
    <template id="bloopark_homepage" inherit_id="website.homepage">
        <xpath expr="//div[@id='wrap']" position="inside">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_cover parallax s_parallax_is_fixed bg-black-50 pt96 pb96" data-scroll-background-ratio="1" data-name="Cover">
                    <span class="s_parallax_bg oe_img_bg oe_custom_bg" style="background-image: url(&quot;/bprk_portal_extended/static/src/imgs/home-cover.jpg&quot;);  background-position: 50% 0px;"/>
                    <div class="container">
                      <div class="row s_nb_column_fixed">
                        <div class="col-lg-12 s_title" data-name="Title">
                          <h1 class="s_title_thin" style="text-align: left; font-size: 62px;">We<br/>Digitize<br/>The Middleclass</h1>
                        </div>
                        <div class="col-lg-12 s_text pt16 pb16" data-name="Text">
                          <p class="lead" style="text-align: center;"/>
                          <div style="text-align: left;">
                            <span style="font-size: 17.5px;">We are bloopark-your certified odoo agency and partner<br/>from Magdeburg. Together with you we build<br/>your fully integrated ERP system: holistic, functional<br/>and intuitive.</span>
                          </div>
                          <p/>
                        </div>
                      </div>
                    </div>
                </section>
            </div>
        </xpath>
    </template>
</odoo>